<div class="deck-page">
  {{#deck}}
    <div class="deck-name">
      <h2>{{deck.deckName}} Deck</h2>
    </div>

    <div class="add-card-start-quiz">
      <form class="start-quiz" action="/quiz" method="post">
        <button type="submit" name="button">Start Quiz</button>
      </form>

      <div class="new-card">
        <h3>Add a New Card</h3>
        <form class="new-card-form" action="/addCard" method="post">
          <label for="question">Front of Card:</label><br>
          <input type="text" name="question" value="" placeholder="card question"><br>
          <label for="answer">Back of Card:</label><br>
          <input type="text" name="answer" value="" placeholder="card answer"><br>
          <button type="submit" name="button">Add Card</button>
        </form>
      </div>
    </div>

    <div class="current-cards">
        <h2>{{deckSize}} Cards in {{deckName}} currently: </h2>
        <div class="card-display">
        {{#cards}}
          <div class="card-each">
            <h5>{{question}}</h5>
          </div>
        {{/cards}}
        </div>
    </div>
  {{/deck}}
</div>
